<?xml version="1.0" encoding="UTF-8" ?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1"
  metadata-complete="true">
  
  <!-- 웹 애플리케이션에 대한 설명을 기술한다.(선택사항)-->
  <description>web01 웹 애플리케이션</description>
  
  <!-- 톰캣 서버의 관리 화면에 출력할 웹 애플리케이션 제목(선택사항) -->
  <display-name>web01</display-name>
  
  <!-- 서블릿 클래스 정보 등록 -->
  <servlet>
    <servlet-name>Hello</servlet-name> <!-- 서블릿 이름 -->
    <servlet-class>step01.Hello</servlet-class> <!-- 서블릿 클래스 -->
  </servlet>
  <servlet>
    <servlet-name>Hello2</servlet-name> <!-- 서블릿 이름 -->
    <servlet-class>step01.Hello2</servlet-class> <!-- 서블릿 클래스 -->
  </servlet>
  
  <!-- 서블릿 클래스에 URL을 지정 -->
  <servlet-mapping>
    <servlet-name>Hello</servlet-name>
    <url-pattern>/step01/hello</url-pattern> <!-- pattern은 마음대로 지정할 수 있다. -->
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Hello2</servlet-name>
    <!-- URL은 마음대로 작성할 수 있음을 증명하기 위해 위의 서블릿과
         다른 URL을 지정할 것이다. -->
    <url-pattern>/hello2</url-pattern> <!-- pattern은 마음대로 지정할 수 있다. -->
  </servlet-mapping>
</web-app>